---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

export const prerender = true;
---

<BaseLayout 
    title="404 — Страница не найдена | Антон Двинянинов"
    description="Страница, которую вы ищете, не существует. Вернитесь на главную или посмотрите мои проекты."
    ogImage="https://dvinyaninov.ru/og-image.webp"
>
    <Header />
    
    <main class="error-page">
        <div class="error-content">
            <div class="error-code">
                <span class="error-code__number">404</span>
                <div class="error-code__glitch" aria-hidden="true">404</div>
            </div>
            
            <h1 class="error-title">
                <span class="title-line">Страница</span>
                <span class="title-line title-accent">не найдена</span>
            </h1>
            
            <p class="error-desc">
                Похоже, вы попали на несуществующую страницу.<br>
                Но не переживайте — есть много интересного!
            </p>
            
            <div class="error-actions">
                <a href="/" class="error-btn error-btn--primary">
                    <span>На главную</span>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                </a>
                <a href="/projects/" class="error-btn error-btn--secondary">
                    <span>Смотреть проекты</span>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M7 17L17 7M17 7H7M17 7V17"/>
                    </svg>
                </a>
            </div>
            
            <div class="error-suggestions">
                <p class="suggestions-title">Возможно, вы искали:</p>
                <div class="suggestions-links">
                    <a href="/#work">Проекты</a>
                    <a href="/#services">Услуги</a>
                    <a href="/#contact">Контакты</a>
                </div>
            </div>
        </div>
        
        <div class="error-visual">
            <div class="orbit orbit-1"></div>
            <div class="orbit orbit-2"></div>
            <div class="orbit orbit-3"></div>
        </div>
    </main>
</BaseLayout>

<style>
.error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 120px 20px 60px;
    position: relative;
    overflow: hidden;
}

.error-content {
    max-width: 600px;
    text-align: center;
    position: relative;
    z-index: 2;
}

.error-code {
    position: relative;
    margin-bottom: 40px;
}

.error-code__number {
    font-size: clamp(120px, 20vw, 200px);
    font-weight: 700;
    line-height: 1;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: block;
    position: relative;
}

.error-code__glitch {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    font-size: clamp(120px, 20vw, 200px);
    font-weight: 700;
    line-height: 1;
    color: var(--accent-primary);
    opacity: 0.3;
    animation: glitch 3s infinite;
    pointer-events: none;
}

@keyframes glitch {
    0%, 100% {
        transform: translateX(-50%) translateY(0);
        opacity: 0.3;
    }
    20% {
        transform: translateX(-48%) translateY(-2px);
        opacity: 0.5;
    }
    40% {
        transform: translateX(-52%) translateY(2px);
        opacity: 0.2;
    }
    60% {
        transform: translateX(-50%) translateY(-1px);
        opacity: 0.4;
    }
    80% {
        transform: translateX(-51%) translateY(1px);
        opacity: 0.3;
    }
}

.error-title {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 20px;
}

.title-line {
    display: block;
}

.title-accent {
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.error-desc {
    font-size: 18px;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 40px;
}

.error-actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 60px;
}

.error-btn {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 32px;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.error-btn svg {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
}

.error-btn--primary {
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    color: white;
}

.error-btn--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(13, 76, 211, 0.3);
}

.error-btn--primary:hover svg {
    transform: scale(1.1);
}

.error-btn--secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 2px solid var(--border-color);
}

.error-btn--secondary:hover {
    background: var(--bg-tertiary);
    border-color: var(--accent-primary);
    transform: translateY(-2px);
}

.error-btn--secondary:hover svg {
    transform: translateX(4px) translateY(-4px);
}

.error-suggestions {
    padding-top: 40px;
    border-top: 1px solid var(--border-color);
}

.suggestions-title {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 16px;
}

.suggestions-links {
    display: flex;
    gap: 24px;
    justify-content: center;
    flex-wrap: wrap;
}

.suggestions-links a {
    font-size: 16px;
    color: var(--accent-primary);
    text-decoration: none;
    position: relative;
    transition: color 0.3s ease;
}

.suggestions-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent-primary);
    transition: width 0.3s ease;
}

.suggestions-links a:hover {
    color: var(--accent-secondary);
}

.suggestions-links a:hover::after {
    width: 100%;
}

.error-visual {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    z-index: 1;
    pointer-events: none;
}

.orbit {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1px solid var(--border-color);
    border-radius: 50%;
    opacity: 0.1;
}

.orbit-1 {
    width: 300px;
    height: 300px;
    animation: rotate 20s linear infinite;
}

.orbit-2 {
    width: 450px;
    height: 450px;
    animation: rotate 30s linear infinite reverse;
}

.orbit-3 {
    width: 600px;
    height: 600px;
    animation: rotate 40s linear infinite;
}

@keyframes rotate {
    from {
        transform: translate(-50%, -50%) rotate(0deg);
    }
    to {
        transform: translate(-50%, -50%) rotate(360deg);
    }
}

/* Мобильная версия */
@media (max-width: 768px) {
    .error-page {
        padding: 100px 20px 40px;
    }
    
    .error-desc {
        font-size: 16px;
    }
    
    .error-actions {
        flex-direction: column;
        gap: 12px;
    }
    
    .error-btn {
        width: 100%;
        justify-content: center;
    }
    
    .error-visual {
        width: 400px;
        height: 400px;
    }
    
    .orbit-1 {
        width: 200px;
        height: 200px;
    }
    
    .orbit-2 {
        width: 300px;
        height: 300px;
    }
    
    .orbit-3 {
        width: 400px;
        height: 400px;
    }
    
    .suggestions-links {
        gap: 16px;
    }
}

/* Темная тема */
@media (prefers-color-scheme: dark) {
    .error-btn--secondary {
        background: rgba(255, 255, 255, 0.05);
    }
    
    .error-btn--secondary:hover {
        background: rgba(255, 255, 255, 0.1);
    }
}
</style>
