---
const isProjectPage = Astro.url.pathname.includes('/projects/');
---

<header class="header">
    <a href="/" class="logo">
        <span class="logo__bracket">[</span>dvinyaninov<span class="logo__bracket">]</span>
    </a>
    <nav class="nav">
        <a href="/#work" class="nav__link">
            <span class="nav__number">01</span>
            <span class="nav__text">Проекты</span>
        </a>
        <a href="/#services" class="nav__link">
            <span class="nav__number">02</span>
            <span class="nav__text">Услуги</span>
        </a>
        <a href="/#contact" class="nav__link">
            <span class="nav__number">03</span>
            <span class="nav__text">Контакт</span>
        </a>
    </nav>
    <div class="header__right">
        <button class="header__status" id="openContactModal">
            <span class="status__dot"></span>
            <span>Доступен для проектов</span>
        </button>
        <button class="theme-toggle" aria-label="Переключить тему">
            <svg class="theme-icon theme-icon--sun" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5"/>
                <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
            </svg>
            <svg class="theme-icon theme-icon--moon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
            </svg>
        </button>
        <button class="mobile-menu-toggle" aria-label="Открыть меню">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</header>

<div class="mobile-menu">
    <nav class="mobile-menu__nav">
        <a href="/#work" class="mobile-menu__link">
            <span class="mobile-menu__number">01</span>
            <span>Проекты</span>
        </a>
        <a href="/#services" class="mobile-menu__link">
            <span class="mobile-menu__number">02</span>
            <span>Услуги</span>
        </a>
        <a href="/#contact" class="mobile-menu__link">
            <span class="mobile-menu__number">03</span>
            <span>Контакт</span>
        </a>
    </nav>
</div>

<div class="contact-modal" id="contactModal">
    <div class="contact-modal__overlay"></div>
    <div class="contact-modal__content">
        <button class="contact-modal__close" aria-label="Закрыть">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 6L6 18M6 6l12 12"/>
            </svg>
        </button>
        <h2 class="contact-modal__title">Обсудим проект?</h2>
        <p class="contact-modal__desc">Расскажите о вашей идее, и я свяжусь с вами в ближайшее время</p>
        <form class="contact-modal__form">
            <div class="form__group">
                <input type="text" class="form__input" name="name" placeholder="Ваше имя" required>
            </div>
            <div class="form__group">
                <input type="text" class="form__input" name="contact" placeholder="Телефон или Email" required>
            </div>
            <div class="form__group">
                <textarea class="form__textarea" name="message" placeholder="Расскажите о проекте..." rows="6" required></textarea>
            </div>
            <button type="submit" class="form__submit">
                <span>Отправить</span>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M7 17L17 7M17 7H7M17 7V17"/>
                </svg>
            </button>
        </form>
    </div>
</div>
