server {
    listen 80;
    listen [::]:80;
    server_name dvinyaninov.ru www.dvinyaninov.ru;

    # Редирект на HTTPS
    return 301 https://$server_name$request_uri;
}

# Редирект с www на без www (HTTPS)
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name www.dvinyaninov.ru;

    # SSL сертификаты
    ssl_certificate /path/to/ssl/certificate.crt;
    ssl_certificate_key /path/to/ssl/private.key;

    # Редирект на версию без www
    return 301 https://dvinyaninov.ru$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name dvinyaninov.ru;

    # SSL сертификаты (укажи свои пути)
    ssl_certificate /path/to/ssl/certificate.crt;
    ssl_certificate_key /path/to/ssl/private.key;

    # SSL настройки
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Корневая директория сайта
    root /var/www/dvinyaninov.ru/dist;
    index index.html;

    # Логи
    access_log /var/log/nginx/dvinyaninov.ru-access.log;
    error_log /var/log/nginx/dvinyaninov.ru-error.log;

    # Сжатие Gzip
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml+rss image/svg+xml;
    
    # Brotli сжатие (требует модуль ngx_brotli)
    # Раскомментируй если установлен модуль brotli
    # brotli on;
    # brotli_comp_level 6;
    # brotli_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml+rss image/svg+xml;
    
    # Использование предсжатых файлов
    gzip_static on;
    # brotli_static on; # Раскомментируй если установлен модуль brotli

    # Редирект с /index.html на /
    if ($request_uri ~ ^/(.*)index\.html$) {
        return 301 /$1;
    }

    # Убираем .html из URL
    location / {
        try_files $uri $uri.html $uri/ =404;
    }
    
    # Кастомная страница 404
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }

    # Кеширование статических файлов
    location ~* \.(jpg|jpeg|png|gif|webp|svg|ico|css|js|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Кеширование шрифтов
    location ~* \.(woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Access-Control-Allow-Origin "*";
        access_log off;
    }

    # Безопасность
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # robots.txt и sitemap.xml
    location = /robots.txt {
        access_log off;
        log_not_found off;
    }

    location = /sitemap.xml {
        access_log off;
        log_not_found off;
    }

    # Запрет доступа к скрытым файлам
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}
